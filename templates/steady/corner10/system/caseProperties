initialConditions
{
U           uniform (<INLET_VELOCITY>);
p           uniform 0;
k           uniform 0.24;
omega       uniform 1.78;
nut         uniform 0;
}

boundaryConditions
{
    
<PATCHBC>


    /*inlet
    {
        category        inlet;
        type            subSonic;
        patches         (x-min y-min);
        options
        {
            flowSpecification fixedVelocity;
        }
        values
        {
            $:initialConditions;
        }
    }*/

    inlet
    {
        category        outlet;
        type            subSonic;
        patches         (".*x-min.*" ".*y-min.*");
        options
        {
            returnFlow      inletOutlet;
        }
        values
        {
            $:initialConditions;
        }
    }

    <GROUND_PATCH>


    
    
    outlet
    {
        category        outlet;
        type            subSonic;
        patches         (".*x-max.*" ".*y-max.*");
        options
        {
            returnFlow      default;
        }
        values
        {
            $:initialConditions;
        }
    }

    walls
    {
        category        wall;
        type            slip;
        patches         (".*z-max.*");
        values
        {
            $:initialConditions;
        }
    }
    


    
