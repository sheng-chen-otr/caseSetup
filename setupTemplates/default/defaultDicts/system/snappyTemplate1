FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       true;



geometry
{
<GEOMETRY>			
}



castellatedMeshControls
{
maxLocalCells 2000000;
maxGlobalCells 100000000;
minRefinementCells 10;
maxLoadUnbalance 0.10;
nCellsBetweenLevels 5;
features
(        
<FEATURE_EDGE>  	
);
    
refinementSurfaces
{      
<REFINEMENT_SURFACES>
}
resolveFeatureAngle <REF_ANGLE>;
refinementRegions
{

<REFINEMENT_REGIONS>
".*fr.*"{mode distance;levels ((0.03 9) (0.1 8) (0.2 7));}
".*fw.*"{mode distance;levels ((0.03 9) (0.1 8) (0.25 7) (0.4 6));}
".*rw.*"{mode distance;levels ((0.03 9) (0.1 8) (0.25 7) (0.4 6));}
".*rr.*"{mode distance;levels ((0.03 9) (0.1 8) (0.2 7));}
".*trial.*"{mode distance;levels ((0.01 8) (0.1 7) (0.2 6));}
".*body.*"{mode distance;levels ((0.05 8) (0.1 7) (0.2 6));}
} 
locationInMesh <LOC_IN_MESH>;
allowFreeStandingZoneFaces true;
}



snapControls
{
nSmoothPatch 3;
tolerance 2.0;
nSolveIter 50;
nRelaxIter 5;
nFeatureSnapIter 10;
implicitFeatureSnap false;
explicitFeatureSnap true;
multiRegionFeatureSnap false;
}



addLayersControls
{
    
relativeSizes true;

layers
{
<LAYERS>	
"(y-max).*"{nSurfaceLayers -1;}	
"(z-min).*"{nSurfaceLayers 5;}
"(.*drivetrain-motor.*).*"{nSurfaceLayers 0;}
"(.*-lv-.*).*"{nSurfaceLayers 0;}
"(.*-NL-.*).*"{nSurfaceLayers -1;}
"(.*-nl-.*).*"{nSurfaceLayers -1;}
}

expansionRatio <DEF_EX_RATIO>;
finalLayerThickness 0.3;
minThickness 0.000001;
nGrow 0;
featureAngle 180;
slipFeatureAngle 30;
nRelaxIter 3;
nSmoothSurfaceNormals 1;
nSmoothNormals 3;
nSmoothThickness 10;
maxFaceThicknessRatio 0.5;
maxThicknessToMedialRatio 0.8;
minMedialAxisAngle 90;
nBufferCellsNoExtrude 0;
nLayerIter 70;
}



meshQualityControls
{
#include "meshQualityDict"
maxNonOrtho 75;
maxBoundarySkewness 4;
maxInternalSkewness 4;
nSmoothScale 4;
errorReduction 0.75;
}

writeFlags
(
    scalarLevels
    layerSets
    layerFields     // write volScalarField for layer coverage
);
